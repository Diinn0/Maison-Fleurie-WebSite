// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @unique @default(autoincrement())
  firstname String
  lastname  String
  mail      String @unique
  password  String
  role      Role
}

model Page {
  id        Int       @id @unique @default(autoincrement())
  title     String
  url       String
  content   String
  published DateTime?
  updateat  DateTime? @updatedAt
}

model Image {
  id   Int    @id @unique @default(autoincrement())
  name String
  url  String
}

model Cat {
  id          Int       @id @unique @default(autoincrement())
  name        String
  description String?
  sexe        Sexe      @default(Male)
  dateofbirth DateTime
  sellable    Boolean   @default(false)
  status      Status    @default(Unavailable)
  updateat    DateTime? @updatedAt
}

model Breeding {
  id    Int  @id @unique @default(autoincrement())
  month Int?
  year  Int
}

model Notif {
  id   Int    @id @unique @default(autoincrement())
  mail String
}

enum Status {
  Unavailable
  Option
  Reserved
  Available
}

enum Role {
  ADMIN
}

enum Sexe {
  Male
  Femelle
}
